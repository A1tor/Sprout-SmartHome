<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sprout.Views.RoomCard"
             xmlns:models="clr-namespace:Sprout.Models"
             xmlns:DataType="models:RoomModelTemplate">
  <ContentView.Content>
        <Frame Padding="0"
               Margin="0, 5, 0, 5"
            Style="{StaticResource RoomCard}">
            <Image Style="{StaticResource SmallIcon}"
                   Margin="10"
                Source="{Binding Image}"/>
        </Frame>
    </ContentView.Content>
</ContentView>